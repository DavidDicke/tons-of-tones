<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h4 class="mb-4">Log in</h4>
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <div class="my-3">
        <%= link_to "Forgot your password?", new_password_path(resource_name)%>
      </div>
    <% end %>
    <%= f.button :submit, "Login", class: "btn btn-primary w-100 mt-2 mb-4"%>
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <p class="text-start m-0">You don't have an account yet?</p>
      <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-secondary w-100 mt-2 mb-4" %>
    <% end %>
<% end %>
