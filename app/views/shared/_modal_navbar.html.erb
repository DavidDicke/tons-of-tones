<div class="modal fade p-0" id="newNavbarModal" tabindex="-1" role="dialog" aria-labelledby="newNavbarLabel" aria-hidden="true">
  <div class="modal-dialog nav-modal" role="document">
    <div class="modal-content h-100 rounded-0">
      <div class="modal-header rounded-0">
        <div class="row w-100 align-items-center m-0">
          <div class="col-2 p-0">
            <div class="w-100 d-flex justify-content-start">
              <% if user_signed_in? %>
                <%= link_to user_path(current_user) do %>
                  <% if current_user.photo.attached? %>
                    <%= cl_image_tag(current_user.photo.key, class: "avatar", alt: "User Profile Picture") %>
                  <% else %>
                    <%= image_tag "avatar_img.png", class: "avatar", alt: "dropdown menu" %>
                  <% end %>
                <% end %>
              <% end %>
            </div>
          </div>
          <div class="col-8 p-0">
            <%= link_to root_path, class: "navbar-textlogo w-100 " do %>
              <%# <%= image_tag image_path("logo.png") %>
              <h5 class="modal-title m-0 text-center" id="exampleModalLabel">Tons of Tones</h5>
            <% end %>
          </div>
          <div class="col-2 p-0">
            <div class="w-100 d-flex justify-content-end">
              <button type="button" class="btn-close m-0" data-bs-dismiss="modal" aria-label="Close">
                <%# <span aria-hidden="true">&times;</span> %>
              </button>
            </div>
          </div>
        </div>
      </div>
      <div class="d-flex flex-column justify-content-between h-100">
        <% if user_signed_in? %>
          <%= render "shared/nav_logedin" %>
        <% else %>
          <div class="modal-body">
            <%= render "devise/sessions/login" %>
          </div>
          <div class="modal-footer justify-content-start rounded-0">
            <%= link_to "View All Instruments", instruments_path %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
