<div class="modal-body">
  <h4 class="mt-3 mb-5">Hello <%= current_user.first_name %> <%= current_user.last_name %></h4>
  <div class="my-3">
    <%= link_to instrument_bookings_bookings_path do %>
    <span>On Loan</span>
    <span data-notification-updater-target="loanNotifications"></span>
    <% end %>
  </div>
  <div class="my-3">
    <%= link_to user_bookings_bookings_path do %>
      <span>Borrowed</span>
      <span data-notification-updater-target="borrowNotifications"></span>
    <% end %>
  </div>
  <div class="mt-5 mb-3">
    <%= link_to "List an Instrument", new_instrument_path %>
  </div>
  <div class="my-3">
    <%= link_to "Manage Account", user_path(current_user) %>
  </div>
  <div class="h-10 border-top border-secondary my-5"></div>
  <div class="my-3">
    <%= link_to "View All Instruments", instruments_path %>
  </div>
</div>
<div class="modal-footer justify-content-start">
  <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete, action: "click->notification-updater#stop"}, class: "btn btn-primary w-100" %>
</div>
