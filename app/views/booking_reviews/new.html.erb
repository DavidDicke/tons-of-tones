<div id="review_form" class="col-12 col-sm-6">
  <div class="bg-white rounded p-3">
    <h5 class="pt-3 pb-3">How was your experience?</h5>
    <%= simple_form_for [@booking, @booking_review] do |f| %>
      <% if @booking_review.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% @booking_review.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= f.input :content, as: :text, placeholder: "How did you like the instrument?", label: false, input_html: { rows: 8 } %>
      <%= f.input :rating, as: :select, collection: (1..5), required: true, label: false, input_html: { data: { controller: "star-rating" } } %>
      <%= f.submit "Submit", class: "btn btn-primary mt-2 mb-4 mr-4", data: { turbo: true } %>
      <%= link_to 'Cancel', user_bookings_bookings_path, class: 'btn btn-secondary mt-2 mb-4' %>
    <% end %>
    <%= cl_image_tag @booking.instrument.photos.first.key, style: "width: 100%; height: auto; border-radius: 0.5rem;" %>
  </div>
</div>
