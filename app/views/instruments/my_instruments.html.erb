<h1>My Instruments</h1>

<% if @instruments.any? %>
  <ul>
    <% @instruments.each do |instrument| %>
      <li>
        <%= link_to instrument.name, instrument_path(instrument) %>
        <%= link_to 'Edit', edit_instrument_path(instrument), class: 'btn btn-secondary' %>
        <%= link_to 'Delete', instrument_path(instrument), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>You haven't created any instruments yet.</p>
  <%= link_to 'Create a new instrument', new_instrument_path, class: 'btn btn-primary' %>
<% end %>
