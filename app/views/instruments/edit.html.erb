<div class="p-4">
  <div class="pb-3">
    <h1>Edit <%= @instrument.name %></h1>
  </div>

  <%= simple_form_for @instrument do |f| %>
    <%= f.input :name, label: "Instrument Name" %>
    <%= f.input :description, label: "Description" %>
    <%= f.input :address, label: "Address" %>
    <%= f.input :price, label: "Price" %>
    <%= f.input :category, label: "Category" %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>

    <%= f.submit "Update Instrument", class: "btn btn-primary" %>
  <% end %>
</div>
