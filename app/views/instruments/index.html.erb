<%# <h1 class="mt-5 text-center">Instruments</h1> %>
<div class="container mt-4">
  <%= render "searchbar_togglable" %>
  <div class="row">
    <% @instruments.each do |instrument| %>
      <div class="col-md-4 mb-4">
        <%= render partial: "shared/instrument_card", locals: { instrument: instrument, start_date: params[:start_date], end_date: params[:end_date] } %>
      </div>
    <% end %>
  </div>
</div>
